{
  "name": "crun",
  "version": "0.2.3",
  "description": "An API for remotely running commands.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist/",
    "build": "npm run clean && babel --out-dir dist/ src/",
    "start": "npm run build && env $(cat .env) node index.js",
    "flushdb": "mongo crun --eval \"db.dropDatabase()\"",
    "eslint": "eslint src/",
    "mocha": "env $(cat .env) mocha --require co-mocha --require ./index --require babel-polyfill --bail dist/test/api-group.js",
    "test": "npm run eslint && npm run flushdb && npm run build && npm run mocha",
    "nsp": "nsp check --output summary"
  },
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.18.2",
    "babel-plugin-transform-builtin-extend": "^1.1.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "browserify": "^13.1.1",
    "chai": "^3.5.0",
    "co-mocha": "^1.1.3",
    "eslint": "^3.3.1",
    "eslint-config-google": "^0.6.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-concat": "^2.6.1",
    "gulp-htmlmin": "^3.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-uglify": "^2.0.0",
    "jwt-simple": "^0.5.1",
    "mocha": "^3.2.0",
    "nsp": "^2.6.2",
    "nsp-formatter-checkstyle": "^1.0.1",
    "supertest": "^2.0.0",
    "vinyl-source-stream": "^1.1.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.20.0",
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.4.3",
    "bootstrap": "^3.3.7",
    "co": "^4.6.0",
    "debug": "^2.2.0",
    "eslint": "^3.12.1",
    "font-awesome": "^4.7.0",
    "generic-pool": "^2.4.2",
    "koa": "^1.2.1",
    "koa-bodyparser": "^2.2.0",
    "koa-compose": "^2.4.0",
    "koa-json": "^1.1.3",
    "koa-router": "^5.4.0",
    "lodash": "^4.15.0",
    "moment": "^2.17.1",
    "mongoose": "^4.5.10",
    "rand-token": "^0.2.1",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "redux": "^3.6.0",
    "uuid": "^3.0.1"
  },
  "eslintConfig": {
    "extends": "google",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "valid-jsdoc": "off",
      "new-cap": "off"
    }
  }
}
