{
  "name": "crun",
  "version": "0.0.1",
  "description": "An API for remotely running generic commands.",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist/ && babel --out-dir dist/ src/",
    "start": "npm run build && env $(cat .env) node index.js",
    "flushdb": "mongo crun --eval \"db.dropDatabase()\"",
    "test": "npm run flushdb && npm run build && env $(cat .env) mocha --require co-mocha --require ./index --bail dist/test/api-user.js"
  },
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.1.18",
    "babel-plugin-transform-es2015-destructuring": "^6.1.18",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.0.18",
    "babel-plugin-transform-es2015-parameters": "^6.0.18",
    "babel-plugin-transform-es2015-spread": "^6.6.5",
    "babel-plugin-transform-strict-mode": "^6.0.15",
    "chai": "^3.5.0",
    "co-mocha": "^1.1.3",
    "eslint": "^3.3.1",
    "eslint-config-google": "^0.6.0",
    "mocha": "^3.0.2",
    "supertest": "^2.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.3.0",
    "bluebird": "^3.4.3",
    "co": "^4.6.0",
    "debug": "^2.2.0",
    "generic-pool": "^2.4.2",
    "koa": "^1.2.1",
    "koa-bodyparser": "^2.2.0",
    "koa-compose": "^2.4.0",
    "koa-json": "^1.1.3",
    "koa-router": "^5.4.0",
    "lodash": "^4.15.0",
    "mongoose": "^4.5.10",
    "node-uuid": "^1.4.7",
    "rand-token": "^0.2.1"
  },
  "eslintConfig": {
    "extends": "google",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "valid-jsdoc": "off",
      "new-cap": "off"
    }
  }
}
